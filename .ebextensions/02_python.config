container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python manage.py migrate"
    leader_only: true
  02_createsu:
    command: "source /var/app/venv/*/bin/activate && python core/manage.py createsu"
    leader_only: true
  03_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python core/manage.py collectstatic --noinput"

option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: ebdjango.settings